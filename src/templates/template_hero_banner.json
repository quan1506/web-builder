{
  "id": "template_hero_banner",
  "name": "Hero Banner",
  "description": "A template for a simple hero banner",
  "thumbnail": "template_hero_banner.png",
  "rootElementId": "page-wrapper",
  "document": {
    "page-wrapper": {
      "id": "page-wrapper",
      "type": "block",
      "isRoot": true,
      "tag": "div",
      "isEditable": true,
      "style": {
        "display": "flex",
        "width": "100%",
        "minHeight": "100%",
        "padding": "12px 0",
        "backgroundColor": "#F5E5E5"
      },
      "attributes": {
        "data-test-id": "page-wrapper"
      },
      "children": ["page-content"]
    },
    "page-content": {
      "id": "page-content",
      "type": "block",
      "tag": "div",
      "isEditable": false,
      "style": {
        "margin": "0 auto",
        "width": 600,
        "backgroundColor": "#ffffff"
      },
      "children": ["element-list"]
    },
    "element-list": {
      "id": "element-list",
      "type": "block",
      "tag": "div",
      "isEditable": false,
      "style": {
        "minHeight": "100%",
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center"
      },
      "children": ["element-1", "element-2", "element-3"]
    },
    "element-1": {
      "id": "element-1",
      "type": "image",
      "tag": "img",
      "isEditable": true,
      "style": {
        "maxWidth": "100%"
      },
      "attributes": {
        "src": "/image-placeholder.jpg",
        "width": 480,
        "height": "auto",
        "alt": "Placeholder image"
      }
    },
    "element-2": {
      "id": "element-2",
      "type": "heading",
      "tag": "h1",
      "isEditable": true,
      "style": {
        "margin": "16px 0",
        "padding": "0 24px",
        "fontSize": 40,
        "fontWeight": 700,
        "color": "#272727",
        "textAlign": "center"
      },
      "value": "Lorem ipsum dolor sit amet"
    },
    "element-3": {
      "id": "element-3",
      "type": "paragraph",
      "tag": "p",
      "isEditable": true,
      "style": {
        "margin": "8px 0",
        "padding": "0 24px",
        "whiteSpace": "pre-line",
        "fontSize": 18,
        "fontWeight": 400,
        "color": "#646464",
        "textAlign": "center"
      },
      "value": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus at neque at sem varius auctor. Ut bibendum nec velit ac elementum. Integer iaculis massa mi, rhoncus porttitor urna tincidunt id."
    }
  }
}
