{
  "id": "template_hero_banner",
  "name": "Hero Banner",
  "description": "A template for a simple hero banner",
  "thumbnail": "template_hero_banner.png",
  "rootId": "root",
  "document": {
    "root": {
      "id": "root",
      "tag": "div",
      "style": {
        "width": 600,
        "height": "100%",
        "backgroundColor": "#ffffff",
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "margin": "0 auto",
        "padding": "12px 24px"
      },
      "attributes": {
        "data-test-id": "root-container"
      },
      "children": ["element-1", "element-2", "element-3"]
    },
    "element-1": {
      "id": "element-1",
      "tag": "img",
      "style": {
        "width": 500,
        "height": 400
      },
      "parentId": "root"
    },
    "element-2": {
      "id": "element-2",
      "tag": "h1",
      "style": {
        "fontSize": 40,
        "fontWeight": 600,
        "color": "#272727",
        "textAlign": "center"
      },
      "value": "Lorem ipsum dolor sit amet",
      "parentId": "root"
    },
    "element-3": {
      "id": "element-3",
      "tag": "p",
      "style": {
        "fontSize": 18,
        "color": "#646464",
        "textAlign": "center"
      },
      "value": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus at neque at sem varius auctor. Ut bibendum nec velit ac elementum. Integer iaculis massa mi, rhoncus porttitor urna tincidunt id.",
      "parentId": "root"
    }
  }
}
