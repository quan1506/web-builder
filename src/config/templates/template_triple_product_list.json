{
  "id": "tpl_triple_product_list",
  "name": "Triple Product List",
  "description": "A template for display three products in a row",
  "rootElementId": "page-wrapper",
  "document": {
    "page-wrapper": {
      "id": "page-wrapper",
      "type": "block",
      "isRoot": true,
      "tag": "div",
      "isEditable": true,
      "style": {
        "width": "100%",
        "minHeight": "100%",
        "padding": "12px 0",
        "backgroundColor": "#ffcd97"
      },
      "attributes": {
        "data-test-id": "page-wrapper"
      },
      "children": ["page-content"]
    },
    "page-content": {
      "id": "page-content",
      "type": "block",
      "tag": "div",
      "isEditable": false,
      "style": {
        "margin": "80px auto",
        "width": 900,
        "padding": "48px 24px",
        "display": "grid",
        "gridTemplateColumns": "1fr 1fr 1fr",
        "gridGap": "20px",
        "backgroundColor": "#fff1e2"
      },
      "children": ["product-1", "product-2", "product-3"]
    },
    "product-1": {
      "id": "product-1",
      "type": "block",
      "tag": "div",
      "isEditable": false,
      "style": {
        "backgroundColor": "#fff",
        "padding": "20px",
        "borderRadius": "8px",
        "boxShadow": "0 0 10px rgba(0,0,0,0.1)"
      },
      "children": [
        "product-1-image",
        "product-1-title",
        "product-1-price",
        "product-1-button"
      ]
    },
    "product-1-image": {
      "id": "product-1-image",
      "type": "image",
      "tag": "img",
      "isEditable": true,
      "style": {
        "maxWidth": "100%",
        "aspectRatio": "1/1"
      },
      "attributes": {
        "src": "",
        "width": "100%",
        "height": "auto"
      },
      "lockedAttributes": ["width"]
    },
    "product-1-title": {
      "id": "product-1-title",
      "type": "heading",
      "tag": "h4",
      "isEditable": true,
      "style": {
        "marginTop": 8,
        "fontSize": 20,
        "fontWeight": 400,
        "color": "#222222"
      },
      "value": "Product 1"
    },
    "product-1-price": {
      "id": "product-1-price",
      "type": "paragraph",
      "tag": "p",
      "isEditable": true,
      "style": {
        "marginTop": 12,
        "fontSize": 18,
        "fontWeight": 600,
        "color": "#222222"
      },
      "value": "$19.99"
    },
    "product-1-button": {
      "id": "product-1-button",
      "type": "button",
      "tag": "a",
      "isEditable": true,
      "style": {
        "display": "block",
        "marginTop": 20,
        "padding": "12px 24px",
        "fontSize": 16,
        "fontWeight": 400,
        "color": "#ffffff",
        "backgroundColor": "#ffa24a",
        "border": "none",
        "borderRadius": "4px",
        "cursor": "pointer",
        "textDecoration": "none",
        "textAlign": "center"
      },
      "attributes": {
        "href": "",
        "target": "_blank"
